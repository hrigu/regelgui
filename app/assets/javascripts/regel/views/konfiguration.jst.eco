            <div class="slider"></div>
        <% else: %>
        <div class="gruenorangerot">
            <input data-property="rot1" class="input-mini rot" type="text" value="<%= @rot1 %>">
            <input data-property="orange1" class="input-mini orange" type="text" value="<%= @orange1 %>">
            <input data-property="gruen1" class="input-mini  gruen" type="text" value="<%= @gruen1 %>">

